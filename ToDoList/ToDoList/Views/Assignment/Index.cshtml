@model List<Assignment>

@{
    ViewBag.Title = "List tasks";
}

@if (Model != null && Model.Count != 0)
{
    <table class="table table-striped">
        <thead class="table-dark">
        <tr>
            <th>Number</th>
            <th>Task name</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Id</td>
                <td>@a.Name</td>
                <td>@a.Priority</td>
                <td>@a.Status</td>
                <td>
                    @* <a asp-action="Delete" asp-controller="Assignment" asp-route-assignmentId="@a.Id" class="btn btn-outline-danger">Delete</a> *@
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h4 class="text-center">Unfortunately, there are no tasks for you at the moment :с</h4>
    @* <p class="text-center"><a asp-action="Create" asp-controller="Assignment" class="btn btn-dark">Add new task</a></p> *@
}